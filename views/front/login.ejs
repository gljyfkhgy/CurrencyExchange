<%- include("header"); %> 


<div class="container neu-default no-active login-container">
    <form action="/login" method="POST">
    <% if (locals.redir) { %> <input type="hidden" name="redir" value="<%= redir %>"> <% } %> 
        <h2 class="form-heading">Sign in to xChange</h2>
        <h5 class="form-sub-heading">Login here using your username and password</h5>

        <div class="form-group">
            <label>Your username or email</label>
            <% if (locals.error) { if (error.no_user) { %> 
                <p class="form-error">Username/Email does not exists!</p>
            <% }} %> 
            <div class="input-group">
                <div class="input-group-icon"><i class="fa fa-user"></i></div>
                <div class="input-group-area"><input value="<% if (locals.form) { %><%= form.user %><% } %>" class="form-control neu-form-control" type="text" name="user" placeholder="Username or Email" required></div>
            </div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <% if (locals.error) { if (error.password) { %> 
                <p class="form-error">Incorrect password!</p>
            <% }} %> 
            <div class="input-group">
                <div class="input-group-icon"><i class="fa fa-unlock-alt"></i></div>
                <div class="input-group-area"><input class="form-control neu-form-control" type="password" name="password" placeholder="Password" required></div>
            </div>
        </div>
        <div class="form-group form-group-grid">
            <label class="btn-check">Remember me <input type="checkbox" name="remember" checked><span class="mark"></span></label>
            <a style="text-align: right;" href="">Lost password?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn neu-default btn-primary btn-bold btn-form">Sign in</button>
        </div>
        <div class="form-group" style="text-align: center;">
            <div style="margin: 5px;">or login with</div>
            <a class="btn neu-default btn-circle" href="javascript:void(0);" style="color: #28589C; margin: 5px; padding: 18px 23px;"><i class="fa fa-facebook"></i></a>
            <a class="btn neu-default btn-circle" href="javascript:void(0);" style="color: #E4000F; margin: 5px; padding: 18px 21px;"><i class="fa fa-google"></i></a>
        </div>
        <div class="form-group" style="text-align: center;">
            <b>Don't have an account?</b> <a href="/register">Create account</a>
        </div>
    </form>
</div>



<%- include("footer"); %> 